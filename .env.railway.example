# Railway Environment Variables
# Copy these to your Railway service's Variables section

# Database - Use Railway's PostgreSQL plugin
# Railway automatically provides: DATABASE_URL
# Or use: postgresql://user:password@host:port/dbname
DATABASE_URL=

# JWT Settings - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-key-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Settings - Use Railway's Redis plugin
# Railway automatically provides: REDIS_URL
# Or use: redis://default:password@host:port
REDIS_URL=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# App Settings
APP_NAME="E-Commerce API"
APP_VERSION="1.0.0"
DEBUG=False
